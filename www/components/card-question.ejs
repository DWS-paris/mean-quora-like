<div class="userQuestion">
    <p class="questionAuthor"><i class="far fa-question-circle"></i> <span><%= data.question.author %></span></p>
    <h2><%= data.question.headline %></h2>
</div>


<div class="userResponse">
    <% if(data.comments.length > 0) { %>
        <h3><i class="fas fa-comments"></i>  Réponses des utilisateurs</h3>
        <ul class="commentList">
            <% data.comments.map(item => { %>
                <li><%- include('./card-comment.ejs', { item: item }); %></li>
            <% }) %>
        </ul>
    <% } %>

    <% if(isLogged) { %>
        <button class="addResponseBtn" id-data="<%= data.question._id %>" id-question="<%= data.question.headline %>">Proposer une réponse</button>
    <% } %>
</div>
