<%- include('./static/header.ejs'); %>
<main class="grid">
    <section id="mainTitle">
        <article>
            <h1>Apporter des réponses de qualité pour développer des idées nouvelles</h1>
            <p>Agora est une plateforme d'entre-aide pour aider à la compréhension des technologies de l'Internet.</p>
        </article>
        <article>
            <%- include('./static/list-category.ejs'); %>
        </article>
    </section>
    <% if(data.length > 0) { %>
        <% data.map(item => { %>
            <section>
                <%- include('./components/card-question.ejs', { data: item }); %>
            </section>
        <% }) %>
        <% if(data.length < 2) { %>
            <aside></aside>
        <% } %>

        <% if(data.length < 3) { %>
            <aside></aside>
        <% } %>
    <% } %>

    <% if(data.length === 0) { %>
        <section>
            <p>Tiens, pas de questions par ici...</p>
        </section>
        <aside></aside>
        <aside></aside>
    <% } %>
</main>

